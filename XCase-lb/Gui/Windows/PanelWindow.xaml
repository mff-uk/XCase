        <Grid>
            <view:XCaseDrawComponent Name="xCaseDrawComponent" BorderThickness="0" BorderBrush="LightGray" Focusable="True" AllowDrop="True" Padding="1" Dialogs:AccessKeyScoper.IsAccessKeyScope="True" />
        </Grid>
    </DockPanel>
</ad:DocumentContent>

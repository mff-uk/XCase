<Grid x:Class="XCase.View.Controls.AssociationDiamondTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:XCase.View.Controls"
    Height="20" Width="20">
    <Grid.Resources>
        <ResourceDictionary Source="pack://application:,,,/View;component/ControlTemplates.xaml" />
    </Grid.Resources>
    <Border Name="Border" BorderBrush="Black" BorderThickness="1" Background="White">
        <Border.RenderTransform>
            <RotateTransform Angle="45" CenterX="10" CenterY="10"/>
        </Border.RenderTransform>
    </Border>
    <Control Name="ConnectorDecorator"
                 Visibility="Visible"
                 Template="{StaticResource ConnectorDecoratorTemplate}"/>
</Grid>

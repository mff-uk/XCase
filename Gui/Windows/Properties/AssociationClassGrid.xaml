<Gui:XCaseGridBase
    x:Class="XCase.Gui.AssociationClassGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Gui="clr-namespace:XCase.Gui"
    SizeChanged="AssociationClassGrid_SizeChanged">
    <ScrollViewer  Name="scrollViewer" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,0,0">
           
                <!-- Association class -->
                <Gui:PIMClassGrid  x:Name="pimClassGrid" 
                                   HorizontalAlignment="Left"
                                    />

                <!-- Association Ends -->
            <Gui:AssociationEndsGrid x:Name="ends"
                                         HorizontalAlignment="Left" 
                                     />

        </StackPanel>
    </ScrollViewer>
</Gui:XCaseGridBase>